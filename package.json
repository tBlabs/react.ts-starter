{
  "name": "react.ts-starter",
  "version": "1.0.0",
  "description": "Typescript with React, using Parcel bundler",
  "main": "index.js",
  "scripts": {
    "serve": "parcel ./src/index.html",
    "build": "parcel build ./src/index.html --public-url '/'",
    "help": "parcel --help",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/test-shim.js",
      "<rootDir>/config/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "author": "tB",
  "license": "beerware",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "base64-url": "^2.2.0",
    "base64url": "^2.0.0",
    "inversify": "^4.10.0",
    "inversify-inject-decorators": "^3.1.0",
    "material-ui": "^0.20.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@types/base64url": "^2.0.0",
    "@types/enzyme": "^3.1.9",
    "@types/inversify-inject-decorators": "^2.0.0",
    "@types/jasmine": "^2.8.6",
    "@types/jest": "^22.1.3",
    "@types/material-ui": "^0.20.7",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.3.0",
    "parcel-bundler": "^1.6.1",
    "parcel-plugin-typescript": "^0.6.0",
    "prettier": "^1.10.2",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "tslint-config-prettier": "^1.8.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  }
}

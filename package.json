{
  "name": "react.ts-starter",
  "version": "1.0.0",
  "description": "Typescript with React, using parcel bundler",
  "main": "index.js",
  "scripts": {
    "serve": "parcel ./src/index.html --no-cache",
    "build": "parcel build ./src/index.html --public-url '/'",
    "test": "parcel -h",
    "test:watch": "jest --watch"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/test-shim.js",
      "<rootDir>/config/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "author": "tB",
  "license": "beerware",
  "dependencies": {
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "inversify": "^4.10.0",
    "inversify-inject-decorators": "^3.1.0",
    "material-ui": "^0.20.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.8",
    "@types/inversify-inject-decorators": "^2.0.0",
    "@types/jest": "^22.1.2",
    "@types/material-ui": "^0.20.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.2.2",
    "parcel-bundler": "^1.5.1",
    "parcel-plugin-typescript": "^0.5.3",
    "prettier": "^1.10.2",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "tslint-config-prettier": "^1.7.0",
    "tslint-react": "^3.4.0",
    "typescript": "^2.7.1"
  }
}
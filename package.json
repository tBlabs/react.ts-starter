{
  "name": "ts-react-parcel",
  "version": "1.0.0",
  "description": "Typescript with React, using parcel bundler",
  "repository": {
    "type": "git",
    "url": "https://github.com/emaren84/ts-react-parcel"
  },
  "main": "index.js",
  "scripts": {
    "develop": "parcel ./src/index.html",
    "build": "parcel build ./src/index.html --public-url '/'",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/test-shim.js",
      "<rootDir>/config/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "author": "Ahn Dohyung",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.0.29",
    "@types/react-dom": "^16.0.3",
    "inversify": "^4.10.0",
    "inversify-inject-decorators": "^3.1.0",
    "material-ui": "^0.20.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.5",
    "@types/inversify-inject-decorators": "^2.0.0",
    "@types/jest": "^21.1.8",
    "@types/material-ui": "^0.20.5",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^21.2.1",
    "parcel-bundler": "^1.2.0",
    "parcel-plugin-typescript": "^0.2.0-angular.0",
    "prettier": "^1.9.2",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^21.2.4",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.2"
  }
}
